<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:wheel="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/logo_background_lightBlue"
    tools:context="com.diyalo.bussewa.BeforeMainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/bus_sewa_logo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/bus_sewa_logo"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bus_sewa_logo"
            android:gravity="center"
            android:text="Welcome to"
            android:textColor="#ffffff"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bus_sewa_logo"
            android:gravity="center"
            android:text="BusSewa Operator App"
            android:textColor="#ffffff"
            android:textSize="25dp"
            android:textStyle="bold" />

        <ProgressBar
            android:id="@+id/progressBar1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:duration="300"
            android:indeterminateDrawable="@drawable/progress_bar"
            android:layout_centerInParent="true" />
    </LinearLayout>

</RelativeLayout>