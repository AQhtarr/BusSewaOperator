        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                style="@style/trips_tag_textviews"
                android:text="BusName:"
                />
            <TextView
                android:id="@+id/operator"
                style="@style/trips_tag_textview_value"
                android:text="Banepa Deluxe"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                style="@style/trips_tag_textviews"
                android:text="Ticket Price(NRs):"
                />


            <TextView
                android:id="@+id/ticket_price"
                style="@style/trips_tag_textview_value"
                android:text="1000"
                 />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/trips_tag_textviews"
